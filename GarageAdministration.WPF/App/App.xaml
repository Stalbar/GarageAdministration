<Application x:Class="GarageAdministration.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:createOwner="clr-namespace:GarageAdministration.WPF.ViewModels.CreateOwner"
             xmlns:createOwnerView="clr-namespace:GarageAdministration.WPF.Views.CreateOwner"
             xmlns:ownersList="clr-namespace:GarageAdministration.WPF.ViewModels.OwnersList"
             xmlns:ownersListView="clr-namespace:GarageAdministration.WPF.Views.OwnersList"
             xmlns:editOwner="clr-namespace:GarageAdministration.WPF.ViewModels.EditOwner"
             xmlns:editOwnerView="clr-namespace:GarageAdministration.WPF.Views.EditOwner"
             xmlns:garageMap="clr-namespace:GarageAdministration.WPF.ViewModels.GarageMap"
             xmlns:garageMapView="clr-namespace:GarageAdministration.WPF.Views.GarageMap"
             xmlns:createGarage="clr-namespace:GarageAdministration.WPF.ViewModels.CreateGarage"
             xmlns:createGarageView="clr-namespace:GarageAdministration.WPF.Views.CreateGarage"
             xmlns:reportList="clr-namespace:GarageAdministration.WPF.ViewModels.ReportList"
             xmlns:reportListView="clr-namespace:GarageAdministration.WPF.Views.ReportList">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/UIColors.xaml" />
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/Styles/ContextMenuStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <DataTemplate DataType="{x:Type TypeName=createOwner:CreateOwnerViewModel}">
                <createOwnerView:CreateOwnerView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=ownersList:OwnersListViewModel}">
                <ownersListView:OwnersListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=editOwner:EditOwnerViewModel}">
                <editOwnerView:EditOwnerView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=garageMap:GarageMapViewModel}">
                <garageMapView:GarageMapView />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type TypeName=createGarage:CreateGarageViewModel}">
                <createGarageView:CreateGarageView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type TypeName=reportList:ReportListViewModel}">
                <reportListView:ReportListView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>

</Application>