<UserControl x:Class="GarageAdministration.WPF.Views.MainWindow.Components.GarageCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GarageAdministration.WPF.Views.MainWindow.Components"
             xmlns:model="clr-namespace:GarageAdministration.Domain.Models;assembly=GarageAdministration.Domain"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ItemsControl ItemsSource="{Binding Garages}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Background="White" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.Resources>
            <Style TargetType="ContentPresenter">
                <Setter Property="Canvas.Left"
                        Value="{Binding Position.XPosition}" />
                <Setter Property="Canvas.Top"
                        Value="{Binding Position.YPosition}" />
            </Style>
            <DataTemplate DataType="{x:Type model:Garage}">
                <local:GarageCanvasItem />
            </DataTemplate>
        </ItemsControl.Resources>
    </ItemsControl>
</UserControl>
